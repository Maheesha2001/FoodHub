@model IEnumerable<FoodHub.Models.Beverage>

<div style="background-color:#cdcdcd; min-height:100vh; padding:40px;">
    <h2 class="text-center mb-4">Our Beverages</h2>
    <div class="row g-4">
        @foreach (var beverage in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm border-0 h-100 text-center beverage-card">
                    <img src="~/uploads/beverages/@beverage.ImageName" class="card-img-top" alt="@beverage.Name" style="height:200px; object-fit:cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@beverage.Name</h5>
                        <p class="card-text">@beverage.Description</p>

                        <!-- âœ… Cart-enabled ADD button -->
                       <button class="btn btn-warning fw-bold mt-2 w-100 d-flex justify-content-between align-items-center add-to-cart"
                            data-type="beverage"
                            data-id="@beverage.Id"
                            data-name="@beverage.Name"
                            data-price="@beverage.Price">
                        <span>ADD</span>
                        <span>$@beverage.Price</span>
                    </button>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .beverage-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .beverage-card:hover {
        transform: translateY(-8px);
        box-shadow: 0px 8px 16px rgba(0,0,0,0.2);
    }
</style>
@section Scripts { <script src="~/js/cart.js"></script> 
<script> 
document.addEventListener("DOMContentLoaded", function () { 
    document.querySelectorAll(".add-to-cart").forEach(btn => {
    btn.addEventListener("click", function () {
        const id = this.dataset.id;
        const name = this.dataset.name;
        const type = this.dataset.type;   // "beverage"
        const price = parseFloat(this.dataset.price);

        addToCart(id, name, type, price);
    });
});

}); 
</script> 
}
