                        @{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodieExpress</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


</head>
<body>
    <!-- Header / Navbar -->
    <header id="nav-bar">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-warning" asp-controller="Home" asp-action="Index">FoodieExpress</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>

                        @if (currentController == "Home")
                        {
                            <li class="nav-item"><a class="nav-link" href="#specials">Specials</a></li>
                            <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
                            <li class="nav-item"><a class="nav-link" href="#contactus">Contact Us</a></li>
                        }

                        <li class="nav-item"><a class="nav-link" href="/Pizzas">Pizzas</a></li>
                        <li class="nav-item"><a class="nav-link" href="">Beverages</a></li>
                        <li class="nav-item"><a class="nav-link" href=""> <i class="bi bi-cart-fill"></i> </a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Body -->
    <main role="main" class="pb-3" style="padding-bottom: 0 !important;">
        <div class="content">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="custom-footer">
        <p class="mb-0">&copy; @DateTime.Now.Year - FoodieExpress. All rights reserved.</p>
    </footer>

  <!-- Back to Top Button -->
<button id="backToTop" class="btn btn-warning rounded-circle">
    <i class="bi bi-arrow-up"></i>
</button>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="/Content/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
