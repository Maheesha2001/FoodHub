    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand fw-bold text-warning" asp-controller="Home" asp-action="Index">FoodieExpress</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="adminNavbar">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index">Users</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Settings">Settings</a></li>

                    @if (isAdminLoggedIn)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i> @adminUserName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" style="background-color:black">
                                <li>
                                    <form asp-area="Admin"
                                        asp-controller="Account"
                                        asp-action="LogoutAdmin"
                                        method="post"
                                        style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link text-danger p-0 m-0">
                                            Logout
                                        </button>
                                    </form>

                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Account" asp-action="LoginAdmin">Login</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Account" asp-action="RegisterAdmin">Register</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
