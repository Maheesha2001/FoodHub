@model IEnumerable<FoodHub.Models.Pizza>


<h2>Pizzas</h2>
<div class="table-responsive">
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>Price ($)</th>
                <th>Crust Category</th>
                <th>NAME</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int index = 1;
                foreach (var pizza in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@pizza.Name</td>
                        <td>@pizza.Description</td>
                        <td>
                            <img src="~/uploads/pizzas/@pizza.ImageName" alt="@pizza.Name" 
                                 style="width:100px; height:70px; object-fit:cover;"/>
                        </td>
                        <td>@pizza.Price.ToString("0.00")</td>
                        <td>@pizza.CrustCategory</td>
                        <td>@(ViewBag.PizzaCrustMap[pizza.Id])</td>
                        <td>@pizza.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a class="btn btn-sm btn-primary" href="/Admin/Dashboard?page=EditPizzas&id=@pizza.Id">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-controller="Pizzas" asp-action="Delete" asp-route-id="@pizza.Id" 
                               onclick="return confirm('Are you sure you want to delete this pizza?');">Delete</a>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">No pizzas found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
