@model FoodHub.Models.Beverage

<h2>Add Beverage</h2>

<form asp-action="Create" asp-controller="Beverages" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageName" class="form-label">Upload Image</label>
        <input type="file" name="ImageFile" class="form-control" />
        <span asp-validation-for="ImageName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Beverage</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
