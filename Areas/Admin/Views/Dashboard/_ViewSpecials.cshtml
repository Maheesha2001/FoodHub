@* Partial view for View Specials *@
@{
    var specials = ViewData["Specials"] as List<FoodHub.Models.Special>;
}
@model IEnumerable<FoodHub.Models.Special>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-warning mb-3">Specials</h2>
    <a class="btn btn-success" href="/Admin/Dashboard?page=AddSpecials">ADD SPECIALS</a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Actual Price</th>
            <th>Amount Discounted</th>
            <th>Final Price</th>
            <th>Image</th>
            <th>View Details</th>
            <th>Active Status</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.TotalPrice</td>
                @if (item.DiscountType == "Percentage")
                {
                    <td>@item.DiscountValue%</td>
                }
                else
                {
                    <td>$@item.DiscountValue</td>
                }
                <td>@item.FinalPrice</td>
                <td>
                    <img src="/uploads/specials/@item.ImageName" 
                         alt="@item.Title" class="img-fluid" style="max-height:50px;">
                </td>
                <td>
                 <button class="btn btn-primary view-special-items"
                        data-id="@item.Id"
                        data-bs-toggle="modal"
                        data-bs-target="#specialItemsModal">
                    View Items
                </button>



                </td>
                <td>@(item.IsActive ? "Yes" : "No")</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/Admin/Dashboard?page=EditSpecials&id=@item.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-sm btn-danger" href="#">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal for Special Items -->
<div class="modal fade" id="specialItemsModal" tabindex="-1" aria-labelledby="specialItemsModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="specialItemsModalLabel">Special Items</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="custom-th">Item Id</th>
                    <th class="custom-th">Item Type</th>
                    <th class="custom-th">Item Name</th>
                    <th class="custom-th">Quantity</th>
                </tr>
            </thead>
            <tbody id="special-items-body">
                <!-- Items will be populated here dynamically -->
            </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


