@* Partial view for View Specials *@
@model IEnumerable<FoodHub.Models.Special>
<h2 class="text-warning">View Specials</h2>
<p>Here you can see all the specials added to the system.</p>

<table class="table table-dark table-striped mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Image</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <img src="/Content/images/@item.ImageName" 
                         alt="@item.Title" class="img-fluid" style="max-height:50px;">
                </td>
                  <td>
                    <a class="btn btn-sm btn-primary" href="#">Edit</a>
                </td>
                <td>
                    <a class="btn btn-sm btn-danger" href="#">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
