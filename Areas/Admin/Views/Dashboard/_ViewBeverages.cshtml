@model IEnumerable<FoodHub.Models.Beverage>

<h2>Beverages</h2>
@if (!Model.Any())
{
    <p>No beverages found.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>Price</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bev in Model)
            {
                <tr>
                    <td>@bev.Id</td>
                    <td>@bev.Name</td>
                    <td>@bev.Description</td>
                    <td>
                        <img src="~/uploads/beverages/@bev.ImageName" alt="@bev.Name" style="width:80px; height:80px; object-fit:cover;" />
                    </td>
                    <td>$@bev.Price</td>
                    <td>@bev.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/Admin/Dashboard?page=EditBeverages&id=@bev.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-area="Admin" asp-controller="Beverages" asp-action="Delete" asp-route-id="@bev.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
