@model IEnumerable<FoodHub.Models.PizzaCrustCategory>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-warning mb-3">Pizza Crusts</h2>
    <a class="btn btn-success" href="/Admin/Dashboard?page=AddPizzaCategory">ADD PIZZA CRUST</a>
</div>


@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Extra Charge</th>
                <th>Percentage Increase</th>
                <th>Created At</th>
                <th style="width:150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.CategoryName</td>
                <th>@cat.ExtraCharge</th>
                <th>@cat.PercentageIncrease</th>
                <td>@cat.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                   <a class="btn btn-sm btn-primary" href="/Admin/Dashboard?page=EditPizzaCategory&id=@cat.Id">Edit</a>

                    <a asp-area="Admin" asp-controller="Pizzas" asp-action="DeleteCategory" asp-route-id="@cat.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No pizza categories found.</div>
}
