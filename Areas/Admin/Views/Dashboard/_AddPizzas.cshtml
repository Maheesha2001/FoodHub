@model FoodHub.Models.Pizza

<h3 class="text-success">Add New Pizza</h3>

<form asp-action="Create" asp-controller="Pizzas" asp-area="Admin" enctype="multipart/form-data" method="post">
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Pizza Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter pizza name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="BasePrice" class="form-label">Base Price</label>
        <input asp-for="BasePrice" type="number" step="0.01" class="form-control" placeholder="Enter price" />
        <span asp-validation-for="BasePrice" class="text-danger"></span>
    </div>

