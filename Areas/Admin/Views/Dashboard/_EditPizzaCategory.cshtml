@model FoodHub.Models.PizzaCrustCategory 

<h2>Edit Pizza Crust</h2>

<form asp-action="EditCrustCategory" asp-controller="Pizzas" method="post">
    <input type="hidden" asp-for="Id" />

    <!-- Category Name -->
    <div class="mb-3">
        <label asp-for="CategoryName" class="form-label"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <!-- Extra Charge -->
    <div class="mb-3">
        <label asp-for="ExtraCharge" class="form-label"></label>
        <input asp-for="ExtraCharge" class="form-control" placeholder="Enter extra fixed charge (e.g., 2.00)" />
        <span asp-validation-for="ExtraCharge" class="text-danger"></span>
    </div>

    <!-- Percentage Increase -->
    <div class="mb-3">
        <label asp-for="PercentageIncrease" class="form-label"></label>
        <input asp-for="PercentageIncrease" class="form-control" placeholder="Enter percentage increase (e.g., 0.20 = 20%)" />
        <span asp-validation-for="PercentageIncrease" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Category</button>
    <a href="/Admin/Dashboard?page=ViewPizzaCategory" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
