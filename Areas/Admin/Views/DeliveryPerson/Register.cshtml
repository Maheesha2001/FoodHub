@model FoodHub.Models.DeliveryPerson
@{
    ViewData["Title"] = "Register Delivery Person";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 fw-bold text-warning">Register New Delivery Person</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Full Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NIC" class="form-label">NIC</label>
                    <input asp-for="NIC" class="form-control" placeholder="Enter NIC" />
                    <span asp-validation-for="NIC" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="FingerprintEnabled" class="form-check-input" type="checkbox" />
                    <label asp-for="FingerprintEnabled" class="form-check-label">
                        Enable Fingerprint Login (Optional)
                    </label>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success w-50">Register</button>
                    <a asp-action="Index" class="btn btn-secondary w-50 mt-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
